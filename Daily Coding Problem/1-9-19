#include<stdio.h>


void solution(int *arr, int x);


int main(void)
{
  int arr[4]={10, 15, 3, 7};

  int a = 17;
  int x;

  solution(arr, a);

  return 0; 

}

void solution(int *arr, int x)
{

for(int i = 0; i < 4; i++)
{
  for (int j = 1; i < 3; j++)
  {
    if (*(arr+i) + *(arr+j) == x)
    {
      printf("\n *** %d + %d***",*(arr+i),*(arr+j));
      break;
    }
    else{continue;}
  }
}
}
